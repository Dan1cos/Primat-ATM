<UserControl x:Class="Primat_ATM.View.EnterPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Primat_ATM.View"
        mc:Ignorable="d"
        Style="{StaticResource StandartWindow}">
    <Grid Style="{StaticResource StandartGrid}">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" TextWrapping="Wrap" Text="Confirm that it is you" Style="{StaticResource StandartHeadline}" Width="Auto" HorizontalAlignment="Center" VerticalAlignment="Center"/>


        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <!--<TextBlock TextWrapping="Wrap"  Text="Enter password" Width="Auto" HorizontalAlignment="Left" VerticalAlignment="Center"/>-->
            <TextBox x:Name="txtBoxCardPassword" Width="200" Tag="Enter password" Style="{StaticResource StandartTextBox}"/>
        </StackPanel>

        <Button Grid.Row="2" Content="Send" Style="{StaticResource StandartButton}"  VerticalAlignment="Center" HorizontalAlignment="Right" HorizontalContentAlignment="Center" Margin="0,0,40,0"/>
    </Grid>
</UserControl>
